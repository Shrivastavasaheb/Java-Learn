import java.util.*;
public class Telusko {

	public static void main(String[] args) {
		byte n=4;
		for(byte i=1; i<=n; i++) {
			for(byte j=1; j<=n; j++) {
				if(j==1 || j==n || i==1 || i==n) {
					System.out.print("$" + " ");
				}
				else {
					System.out.print(" " + " ");
				}
			}
			System.out.println();
		}
	}

}
